# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# PortOne Payments
NEXT_PUBLIC_PORTONE_STORE_ID=
NEXT_PUBLIC_PORTONE_CHANNEL_KEY_KAKAOPAY=
NEXT_PUBLIC_PORTONE_CHANNEL_KEY_INICIS=
NEXT_PUBLIC_PORTONE_TEST_STORE_ID=
NEXT_PUBLIC_PORTONE_TEST_PAYPAL_CHANNEL_KEY=

# Inicis Payments (Legacy)
NEXT_PUBLIC_INICIS_MID=
NEXT_PUBLIC_INICIS_API_KEY=
NEXT_PUBLIC_INICIS_MERCHANT_KEY=
NEXT_PUBLIC_INICIS_SIGN_KEY=

# Payaction Payments
NEXT_PUBLIC_PAYACTION_USER_ID=
NEXT_PUBLIC_PAYACTION_API_KEY=

# DODO Payments
# DODO Payments Secret Key (서버 사이드 전용 - 절대 공개하지 마세요)
DODO_PAYMENTS_SECRET_KEY=

# DODO Payments Publishable Key (클라이언트 사이드용 - 선택사항)
DODO_PAYMENTS_PUBLISHABLE_KEY=

# DODO Payments API URL (선택사항, 기본값: https://api.dodopayments.com)
DODO_PAYMENTS_API_URL=https://api.dodopayments.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://copydrum.com
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_ENABLE_PURCHASE_LOGS=false
NEXT_PUBLIC_FORCE_GLOBAL_SITE=false

# Analytics Abuse Prevention (어뷰징 방지)
# 활성화/비활성화 (기본값: true)
NEXT_PUBLIC_ENABLE_ABUSE_FILTERING=true

# Rate-Based 설정
NEXT_PUBLIC_ABUSE_MAX_VIEWS_PER_MINUTE=30      # 1분 내 최대 페이지뷰 수 (기본값: 30)
NEXT_PUBLIC_ABUSE_MAX_VIEWS_PER_SESSION=500    # 세션당 최대 페이지뷰 수 (기본값: 500)
NEXT_PUBLIC_ABUSE_MIN_AVG_INTERVAL_MS=2000     # 평균 페이지뷰 간격 임계값 (ms, 기본값: 2000)

# Time-Interval 설정
NEXT_PUBLIC_ABUSE_CONSECUTIVE_FAST_VIEWS=5     # 연속 빠른 페이지뷰 개수 (기본값: 5)
NEXT_PUBLIC_ABUSE_FAST_VIEW_THRESHOLD_MS=1000  # 빠른 페이지뷰 간격 임계값 (ms, 기본값: 1000)

# 기타 설정
NEXT_PUBLIC_ABUSE_MIN_VIEWS_FOR_ANALYSIS=10    # 어뷰징 분석 최소 페이지뷰 수 (기본값: 10)
